#!/bin/bash

# Detect resolution (Hyprland users can swap this for hyprctl if needed)
res=$(xrandr | grep '*' | awk '{print $1}')

# Set scale based on resolution
case "$res" in
  "3840x2160") scale=2.0 ;;
  "2560x1440") scale=1.5 ;;
  "1920x1080") scale=1.25 ;;
  *) scale=1.0 ;;
esac

# Launch Opera Developer with calculated scale
QT_AUTO_SCREEN_SCALE_FACTOR=0 QT_SCALE_FACTOR=$scale /usr/bin/opera-developer --force-device-scale-factor=$scale "$@"
